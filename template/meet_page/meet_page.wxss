.launch_court{
    width: 95%;
    height: 300rpx;
    margin: 10px auto;
    background-color: #eee;
    border-radius: 10px;
}
.launch_court .meetTop{
    height: 90rpx;
    border-radius: 10px 10px 0 0;
}
.launch_court .meetTop image{
    display: inline-block;
    width: 36px;
    height: 36px;
    margin: 5px 5px 4px;
    line-height: 36px;
    border-radius: 100%;
    background-color: blue;
    vertical-align: middle;
}
.launch_court .meetTop text{
    display: inline-block;
    font-size: 16px;
}

.launch_court .meetBottom{
    width: 96%;
    height: 90px;
    margin: 7px auto 8px;
    overflow: hidden;
}
.launch_court .meetBottom .bottomLeft{
    float: left;
    width: 20%;
    /* width: 24%; */
    height: 70px;
    padding:  10px 20px 10px 20px;
    /* padding: 10px; */
    /* background-color: #bcbcbc; */
    background-color: #f8b551;
    font-size: 26px;
    border-radius: 6px 0 0 6px;
    color: #eee;
}

.launch_court .meetBottom .bottomLeft image{
    display: block;
    width: 100%;
    height: 100%;
}
.launch_court .meetBottom .bottomLeft text{
    /* float: left; */
    display: inline-block;
    width: 50%;
    height: 35px;
    text-align: center;
    line-height:35px;
}
.launch_court .meetBottom .bottomRight{
    float: right;
    height: 100%;
    width: 66%;
    position: relative;
    padding-left:  5px;
    display: flex;
    flex-direction: column;
    background-color: #bfbfbf;
}
.launch_court .meetBottom .bottomRight text{
    flex: 1;
    font-size: 14px;
    line-height: 30px;
    color: #9a4545;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.launch_court .meetBottom .bottomRight .read_more{
    position: absolute;
    right: 10px;
    bottom: 5px;
    width: 80px;
    height: 25px;
    line-height: 25px;
    font-size: 14px;
    background-color: #bfbfbf;
    color: #9a4545;
}