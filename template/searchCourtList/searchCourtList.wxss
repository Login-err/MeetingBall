/* pages/nearCourt/nearCourt.wxss */
.nearCourt{
    background-color: #ddd;
    overflow: hidden;
}
.recommendCourt{
    position: relative;
    width: 90%;
    /* height: 240rpx; */
    margin: 10px auto;
    padding:6px 6px 10px 6px;
    background-color: #f8b551;
}
.recommendCourt image{
    width: 100%;
    height: 240rpx;
    background-color: #ccc;
}
.recommendCourt .court_message{
    font-size: 16px;
    color: #eee;
    /* text-align: center; */
    /* max-height: 80rpx; */
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}
.recommendCourt .meet{
    position: absolute;
    right: 10px;
    bottom: 10px;
}
.recommendCourt .meet .meet_btn{
    width: 30px;
    height: 30px;
    line-height: 30px;
    border-radius: 100%;
}