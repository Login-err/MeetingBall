/* pages/joinDetail/joinDetail.wxss */
.courtImg image{
    width: 100%;
    height: 300rpx;
    background-color: #ccc;
}
.courtNews{
    width: 98%;
    margin: 0 auto;
    padding-top: 10px;
}
.courtNews > view{
    padding: 5px 0;
    border-bottom: 1px solid #ccc;
    line-height: 30px;
    font-size: 16px;
}
.courtNews image.icon{
    /* display: inline-block; */
    float: left;
    width: 20px;
    height: 20px;
    padding: 5px 10px;
    vertical-align: middle;
}
.courtNews image.message{
    float: right;
    padding-right: 20px;
}
.courtNews .tip{
    padding-left: 10px;
}
.applyJoin{
    width: 70%;
    margin: 40px auto 0;
}
.applyJoin button{
    display: block;
    width: 100%;
    border-radius: 10px;
    background-color: #f9b551;
}